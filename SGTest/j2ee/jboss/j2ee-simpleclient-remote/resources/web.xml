<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>TestWeb</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>TestFormHandler</servlet-name>
		<jsp-file>/TestFormHandler.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestFormHandler</servlet-name>
		<url-pattern>/TestFormHandler</url-pattern>
	</servlet-mapping>

	<!-- for jboss comment out the section below it does not support JEE 5 -->
	<ejb-local-ref>
		<ejb-ref-name>ejb/SimpleSession</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local>org.openspaces.example.data.ejb.SimpleSession</local>
		<ejb-link>simplesession-remote.jar#SimpleSession</ejb-link>
	</ejb-local-ref>
</web-app>
